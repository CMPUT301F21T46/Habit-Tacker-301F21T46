<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="120">

    <CheckBox
        android:id="@+id/habitCompleted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_weight="95"
        android:gravity="center_horizontal"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33.3">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:text="Habit Title"
            android:textAlignment="center"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/habitEventComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="comment"
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <Button
            android:id="@+id/commentOnHabitButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Add Comment"
            android:textAlignment="textStart" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAlignment="textStart"
            android:id="@+id/commentOnHabitEditText"
            android:maxLength="20"
            />

        <LinearLayout
            android:id="@+id/confirmCommentButtons"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/cancelCommentButton"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_weight="50"
                android:backgroundTint="@color/black"
                android:text="Cancel"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/confirmCommentButton"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_weight="50"
                android:backgroundTint="@color/black"
                android:text="Confirm"
                android:textAlignment="textStart" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Add Photo"
            android:textAlignment="textStart"
            android:id="@+id/addPhotoHabitButton"
            />

        <ImageView
            android:id="@+id/habitPhoto"
            android:layout_width="match_parent"
            android:layout_height="259dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/habitEventLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location"
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Add location"
            android:textAlignment="textStart"
            android:id="@+id/addLocationHabitButton"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAlignment="textStart"
            android:id="@+id/locationOnHabitEditText"
            android:maxLength="20"
            />
        <LinearLayout
            android:id="@+id/confirmLocationButtons"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/cancelLocationButton"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_weight="50"
                android:backgroundTint="@color/black"
                android:text="Cancel"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/confirmLocationButton"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_weight="50"
                android:backgroundTint="@color/black"
                android:text="Confirm"
                android:textAlignment="textStart" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>